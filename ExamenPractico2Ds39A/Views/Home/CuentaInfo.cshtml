@if (ViewBag.cuenta != null)
{
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Realizar transaccion
    </button>
    <input type="hidden" id="nCuenta" value="@ViewBag.cuenta.ncta">
    <div class="accordion" id="accordionExample">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        @ViewBag.cuenta.ncta | Saldo: $@ViewBag.cuenta.saldo
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body" style="height:400px; overflow-y:scroll;">
                    <ul class="list-group">
                        @foreach (var item in ViewBag.transacciones)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @item.cod_transac | @item.tipo | @item.fecha
                                <span class="badge badge-primary badge-pill">$@item.monto</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>


    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Info!</h4>
        <hr>
        <p class="mb-0">No tiene cuentas.</p>
    </div>
}
